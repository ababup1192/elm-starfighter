{
  "scripts": {
    "copy:html": "cpx ./src/index.html ./out",
    "copy:js": "cpx ./src/main.js ./out",
    "copy:image": "mkdirp out/assets/image && cpx ./src/assets/image/* ./out/assets/image",
    "copy": "npm-run-all -p copy:*",
    "watch:elm": "elm-live ./src/Main.elm --open --start-page=index.html --dir=out -- --output=./out/elm.js --debug",
    "watch:sass": "node-sass --include-path scss ./src/sass/style.scss ./out/css/style.css --quiet --watch",
    "watch": "npm-run-all -p watch:*",
    "start": "npm-run-all -s copy watch",
    "test": "elm-test",
    "build:elm": "elm make src/Main.elm --output=./out/elm.js",
    "build:sass": "node-sass --include-path scss ./src/sass/style.scss ./out/css/style.css",
    "build-all": "npm-run-all -p build:*",
    "build": "npm-run-all -s copy build-all"
  },
  "devDependencies": {
    "browser-sync": "^2.26.5",
    "cpx": "^1.5.0",
    "elm": "^0.19.0-no-deps",
    "elm-test": "^0.19.0-rev6",
    "elm-live": "^3.4.1",
    "node-sass": "^4.12.0",
    "npm-run-all": "^4.1.5"
  }
}
